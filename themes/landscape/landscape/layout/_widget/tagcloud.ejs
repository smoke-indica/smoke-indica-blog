<% if (site.tags.length){ %>
  <div class="container-fluid" style="min-width:100%;">
    <div class="row">
      <div class="d-none d-lg-block widget-wrap">
        <h3 class="widget-title"><%= __('tagcloud') %></h3>
        <div class="widget tagcloud"  style="box-shadow: 2px 3px 3px 3px #8DB98A;">
          <%- tagcloud() %>
        </div>
      </div>
    </div>
  </div>
<% } %>
